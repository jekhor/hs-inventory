<h1>Listing assets</h1>

<table>
  <tr>
    <th>Inv. №</th>
    <th>Name</th>
    <th>Model</th>
    <th>Serial №</th>
    <th>Category</th>
    <th>Owner</th>
    <th>User</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @assets.each do |asset| %>
  <tr>
    <td><%= asset.inv_no %></td>
    <td><%= asset.name %></td>
    <td><%= asset.model %></td>
    <td><%= asset.serial %></td>
    <td><%= asset.category.name unless asset.category.nil? %></td>
    <td><%= asset.owner.name unless asset.owner.nil? %></td>
    <td><%= asset.user.name unless asset.user.nil? %></td>
    <td><%= asset.date %></td>
    <td><%= link_to 'Show', asset %></td>
    <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
    <td><%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

